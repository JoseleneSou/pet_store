<h1>Editar perfil</h1>

<%= form_with model: @pet, url: update_pet_path(@pet), method: 'put' do |form| %>

  <p>
    <%= form.label :name %><br/>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :breed %><br/>
    <%= form.text_field :breed %>
  </p>
  <p>
    <%= form.label :age %><br/>
    <%= form.text_field :age %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
